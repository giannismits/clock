<Label>:
    font_name:'Roboto'
    font_size:60
    markup:True

<Robotobutton@Button>:
    font_name:'Roboto'
    font_size:25
    bold:True
    border: (2, 2, 2, 2)
    background_normal:'button_normal.png'
    background_down:'button_down.png'


BoxLayout:
    orientation:'vertical'
    Label:
        id: time
        text:'[b]00[/b]:00:00'


    BoxLayout:
        orientation:'horizontal'
        height:90
        spacing:20
        padding:20
        size_hint:(1,None)

        Robotobutton:
            id : start_stop
            text:'Start'
            on_press:app.start_stop()


        Robotobutton:
            id:reset
            text:'Reset'
            background_down:'red_button_down.png'
            background_normal:'red_button_normal.png'
            on_press:app.reset()

    Label:
        id:stopwatch
        text: '00:00.[size=40]00[/size]'

